<ScrollPane fitToHeight="true" fitToWidth="true" minHeight="736.0" minWidth="1024.0" prefHeight="736.0" prefWidth="1024.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="de.darkestnoir.bcm.ui.controller.AddUIController">
   <content>
      <VBox spacing="5.0">
         <children>
            <HBox alignment="CENTER_LEFT" spacing="5.0">
               <children>
                  <RadioButton fx:id="addPart" mnemonicParsing="false" onAction="#addPartActive" selected="true" text="Part" />
                  <RadioButton fx:id="addSet" mnemonicParsing="false" onAction="#addSetActive" text="Set" />
                  <TextField fx:id="addPartSearch" onAction="#addPartSearchActive" onKeyTyped="#addPartSearchTyped" promptText="Search..." HBox.hgrow="ALWAYS" />
               </children>
            </HBox>
            <HBox fx:id="mainHBox" spacing="5.0" VBox.vgrow="ALWAYS">
               <children>
                  <VBox fx:id="partCategoryVBox" spacing="3.0" HBox.hgrow="ALWAYS">
                     <children>
                        <TextField fx:id="addCategorySearch" onAction="#addCategorySearchActive" onKeyTyped="#addCategorySearchTyped" promptText="Category..." />
                        <ListView fx:id="addPartCategoryList" VBox.vgrow="ALWAYS" />
                     </children>
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                  </VBox>
                  <VBox fx:id="themesVBox" spacing="3.0" HBox.hgrow="ALWAYS">
                     <children>
                        <TextField fx:id="themesSearch" onAction="#themesSearchActive" onKeyTyped="#themesSearchTyped" promptText="Theme..." />
                        <ListView fx:id="themesList" VBox.vgrow="ALWAYS" />
                     </children>
                  </VBox>
                  <VBox fx:id="partTableVBox" spacing="3.0" HBox.hgrow="ALWAYS">
                     <children>
                        <TableView fx:id="addPartTable" VBox.vgrow="ALWAYS">
                          <columns>
                            <TableColumn fx:id="addPartColumnImage" editable="false" maxWidth="-1.0" minWidth="70.0" prefWidth="-1.0" sortable="false" text="Image" />
                            <TableColumn fx:id="addPartColumnBrand" editable="false" maxWidth="-1.0" minWidth="70.0" prefWidth="-1.0" text="Brand" />
                              <TableColumn fx:id="addPartColumnNumber" editable="false" maxWidth="-1.0" minWidth="70.0" prefWidth="-1.0" text="Part #" />
                              <TableColumn fx:id="addPartColumnANumber" editable="false" maxWidth="-1.0" minWidth="70.0" prefWidth="-1.0" text="Alt. Part #" />
                              <TableColumn fx:id="addPartColumnName" editable="false" maxWidth="-1.0" minWidth="70.0" prefWidth="-1.0" text="Name" />
                              <TableColumn fx:id="addPartColumnCategory" editable="false" maxWidth="-1.0" minWidth="70.0" prefWidth="-1.0" text="Category" />
                          </columns>
                        </TableView>
                     </children>
                  </VBox>
                  <VBox fx:id="colorVBox" spacing="3.0" HBox.hgrow="ALWAYS">
                     <children>
                        <TextField fx:id="addColorSearch" onAction="#addColorSearchActive" onKeyTyped="#addColorSearchTyped" promptText="Color..." />
                        <ListView fx:id="addColorList" stylesheets="@application.css" VBox.vgrow="ALWAYS" />
                     </children>
                  </VBox>
               </children>
               <VBox.margin>
                  <Insets />
               </VBox.margin>
            </HBox>
            <BorderPane VBox.vgrow="ALWAYS">
               <left>
                  <BorderPane minHeight="350.0" minWidth="350.0" prefHeight="350.0" prefWidth="350.0" BorderPane.alignment="CENTER">
                     <center>
                        <ImageView fitHeight="350.0" fitWidth="350.0" pickOnBounds="true" preserveRatio="true" BorderPane.alignment="CENTER">
                           <image>
                              <Image url="@icons/app.png" />
                           </image>
                           <viewport>
                              <Rectangle2D />
                           </viewport>
                        </ImageView>
                     </center>
                     <BorderPane.margin>
                        <Insets right="5.0" />
                     </BorderPane.margin>
                  </BorderPane>
               </left>
               <VBox.margin>
                  <Insets />
               </VBox.margin>
               <center>
                  <VBox prefWidth="200.0" spacing="5.0" BorderPane.alignment="CENTER">
                     <children>
                        <Label prefHeight="25.0" text="Current amount in list:">
                           <VBox.margin>
                              <Insets />
                           </VBox.margin>
                        </Label>
                        <TableView prefWidth="200.0" VBox.vgrow="ALWAYS">
                          <columns>
                            <TableColumn prefWidth="100.0" text="Quantity" />
                            <TableColumn prefWidth="100.0" text="Color" />
                          </columns>
                        </TableView>
                        <BorderPane>
                           <left>
                              <Label prefHeight="25.0" text="Quantity:" BorderPane.alignment="CENTER" />
                           </left>
                           <right>
                              <Spinner editable="true" prefWidth="100.0" BorderPane.alignment="CENTER" />
                           </right>
                        </BorderPane>
                     </children>
                     <BorderPane.margin>
                        <Insets right="5.0" />
                     </BorderPane.margin>
                  </VBox>
               </center>
               <right>
                  <VBox prefWidth="450.0" spacing="5.0" BorderPane.alignment="CENTER">
                     <children>
                        <BorderPane>
                           <center>
                              <Label text="Details:" BorderPane.alignment="CENTER" />
                           </center>
                        </BorderPane>
                        <HBox spacing="5.0">
                           <children>
                              <VBox spacing="5.0">
                                 <children>
                                    <Label prefHeight="25.0" text="Brand:" />
                                    <Label prefHeight="25.0" text="Part#:" />
                                    <Label prefHeight="25.0" text="Alt. Part#:" />
                                    <Label prefHeight="25.0" text="Name" />
                                    <Label prefHeight="25.0" text="Category" />
                                 </children>
                              </VBox>
                              <VBox spacing="5.0">
                                 <children>
                                    <Label prefHeight="25.0" text="Label" />
                                    <Label prefHeight="25.0" text="Label" />
                                    <Label prefHeight="25.0" text="Label" />
                                    <Label prefHeight="25.0" text="Label" />
                                    <Label prefHeight="25.0" text="Label" />
                                 </children>
                              </VBox>
                           </children>
                        </HBox>
                     </children>
                  </VBox>
               </right>
            </BorderPane>
            <BorderPane>
               <left>
                  <HBox spacing="5.0" BorderPane.alignment="CENTER">
                     <children>
                        <Label prefHeight="25.0" text="List:">
                           <HBox.margin>
                              <Insets />
                           </HBox.margin>
                        </Label>
                        <ChoiceBox prefHeight="25.0" prefWidth="280.0">
                           <HBox.margin>
                              <Insets />
                           </HBox.margin>
                        </ChoiceBox>
                        <Button mnemonicParsing="false" text="New" />
                     </children>
                  </HBox>
               </left>
               <right>
                  <HBox spacing="25.0" BorderPane.alignment="CENTER">
                     <children>
                        <Button mnemonicParsing="false" prefWidth="50.0" text="Add">
                           <HBox.margin>
                              <Insets />
                           </HBox.margin>
                        </Button>
                        <Button mnemonicParsing="false" prefWidth="50.0" text="Close">
                           <HBox.margin>
                              <Insets />
                           </HBox.margin>
                        </Button>
                     </children>
                  </HBox>
               </right>
            </BorderPane>
         </children>
         <padding>
            <Insets bottom="6.0" left="6.0" right="6.0" top="6.0" />
         </padding>
      </VBox>
   </content>
</ScrollPane>
